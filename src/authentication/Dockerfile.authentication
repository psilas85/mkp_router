#mkp_router/src/authentication/Dockerfile.authentication

# 1Ô∏è‚É£ Imagem base
FROM python:3.11-slim-bullseye

# 2Ô∏è‚É£ Diret√≥rio de trabalho
WORKDIR /app

# 3Ô∏è‚É£ Vari√°veis
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PYTHONPATH=/app \
    TZ=America/Sao_Paulo \
    ENV=production \
    LOGURU_LEVEL=INFO

# 4Ô∏è‚É£ Depend√™ncias do sistema
RUN apt-get update && apt-get install -y \
    build-essential \
    libpq-dev \
    curl \
    tzdata \
    && rm -rf /var/lib/apt/lists/*

# 5Ô∏è‚É£ Depend√™ncias Python
COPY ./requirements.txt /app/requirements.txt
RUN pip install --no-cache-dir -r /app/requirements.txt && \
    pip install --no-cache-dir fastapi uvicorn bcrypt PyJWT psycopg2-binary loguru==0.7.2

# üî• ISSO FALTAVA
COPY ./src/authentication /app/authentication

EXPOSE 8000

CMD ["uvicorn", "authentication.api.authentication_api:app", "--host", "0.0.0.0", "--port", "8000"]
